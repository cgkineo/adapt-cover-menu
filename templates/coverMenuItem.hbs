<div class="menu-item-inner">
	<div class="menu-item-content">
		{{#if displayTitle}}
		<div class="menu-item-title">{{{displayTitle}}}</div>
		{{/if}}
		{{#if body}}
		<div class="menu-item-body">{{{body}}}</div>
		{{/if}}
		{{#if duration}}
		<div class="menu-item-duration">{{{_globals._menu._coverMenu.durationLabel}}}{{{duration}}}</div>
		{{/if}}
		<button class="menu-item-button">{{{_globals._menu._coverMenu.buttonText}}}</button>
	</div>
</div>
